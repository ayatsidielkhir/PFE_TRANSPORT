<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Facture <%= data.numeroFacture %></title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    h1, h2 { text-align: center; }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 30px;
    }
    th, td {
      border: 1px solid #333;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
    .totaux {
      margin-top: 30px;
      width: 100%;
    }
    .totaux td {
      padding: 10px;
      font-weight: bold;
    }
    .totaux td:last-child {
      text-align: right;
    }
  </style>
</head>
<body>
  <h1>FACTURE</h1>
  <h2>Numéro : <%= data.numeroFacture %></h2>

  <p><strong>Client :</strong> <%= data.client %></p>
  <p><strong>ICE :</strong> <%= data.ice %></p>
  <p><strong>Date :</strong> <%= data.date %></p>
  <p><strong>Tracteur :</strong> <%= data.tracteur %></p>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Chargement</th>
        <th>Déchargement</th>
        <th>Remorque</th>
        <th>Montant HT</th>
      </tr>
    </thead>
    <tbody>
      <% data.lignes.forEach(ligne => { %>
        <tr>
          <td><%= new Date(ligne.date).toLocaleDateString() %></td>
          <td><%= ligne.chargement %></td>
          <td><%= ligne.dechargement %></td>
          <td><%= ligne.remorque %></td>
          <td><%= ligne.totalHT.toFixed(2) %> DH</td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <table class="totaux">
    <tr>
      <td>Total HT</td>
      <td><%= data.totalHT.toFixed(2) %> DH</td>
    </tr>
    <tr>
      <td>TVA (10%)</td>
      <td><%= data.tva.toFixed(2) %> DH</td>
    </tr>
    <tr>
      <td>Total TTC</td>
      <td><%= data.totalTTC.toFixed(2) %> DH</td>
    </tr>
  </table>
</body>
</html>
