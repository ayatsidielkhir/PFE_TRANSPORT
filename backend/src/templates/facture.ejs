<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Facture <%= data.numeroFacture %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 50px;
      font-size: 14px;
      background-image: url("file:///mnt/data/logoMme-.png");
      background-repeat: no-repeat;
      background-position: center;
      background-size: 400px;
    }

    .header table {
      width: 100%;
      line-height: 1.7;
      margin-bottom: 30px;
    }

    .header td {
      vertical-align: top;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      border: 1px solid #000;
      padding: 8px;
      text-align: center;
    }

    th {
      background-color: #f2f2f2;
    }

    .totaux {
      width: 50%;
      margin-left: auto;
      margin-top: 20px;
    }

    .totaux td {
      padding: 6px 10px;
      font-weight: bold;
      border: 1px solid #000;
    }

    .totaux td:last-child {
      text-align: right;
    }

    .signature {
      margin-top: 60px;
      text-align: right;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <!-- ✅ ENTÊTE ALIGNÉE EN DEUX COLONNES -->
  <div class="header">
    <table>
      <tr>
        <td><strong>Facture N° :</strong> <%= data.numeroFacture %></td>
        <td style="text-align: right;"><strong>CLIENT :</strong> <%= data.client %></td>
      </tr>
      <tr>
        <td><strong>Tanger le :</strong> <%= data.date %></td>
        <td style="text-align: right;"><strong>ICE N° :</strong> <%= data.ice %></td>
      </tr>
      <tr>
        <td><strong>Tracteur :</strong> <%= data.tracteur %></td>
      </tr>
    </table>
  </div>

  <!-- ✅ TABLEAU DES LIGNES -->
  <table>
    <thead>
      <tr>
        <th>DATE</th>
        <th>REMORQUE</th>
        <th>Chargement</th>
        <th>Déchargement</th>
        <th>TOTAL HT (DH)</th>
      </tr>
    </thead>
    <tbody>
      <% data.lignes.forEach(ligne => { %>
        <tr>
          <td><%= new Date(ligne.date).toLocaleDateString('fr-FR') %></td>
          <td><%= ligne.remorque %></td>
          <td><%= ligne.chargement %></td>
          <td><%= ligne.dechargement %></td>
          <td><%= ligne.totalHT.toFixed(2) %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <!-- ✅ TOTAUX CALCULÉS -->
  <table class="totaux">
    <tr>
      <td>Total en DH HT</td>
      <td><%= data.totalHT.toFixed(2) %></td>
    </tr>
    <tr>
      <td>TVA <%= data.tva %>%</td>
      <td><%= (data.totalHT * data.tva / 100).toFixed(2) %></td>
    </tr>
    <tr>
      <td>Total en DH TTC</td>
      <td><%= data.totalTTC.toFixed(2) %></td>
    </tr>
  </table>

  <!-- ✅ LIGNE D'ARRÊTÉE -->
  <p style="margin-top: 30px;"><strong>Arrêtée la présente facture à la somme de :</strong></p>

  <div class="signature">
    SIGNATURE
  </div>

</body>
</html>
